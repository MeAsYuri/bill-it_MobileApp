<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/topView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/wavelayout"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_below="@+id/topView"
                android:layout_marginTop="0dp"
                android:background="@drawable/wave" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="72dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/logo" />
            <TextView
                android:id="@+id/registertxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Register"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:textSize="50sp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_below="@+id/registertxt">



                <EditText
                    android:id="@+id/name"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="Full Name"
                    android:maxLines="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/wavelayout"
                    android:background="@drawable/roundborder"/>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="Username"
                    android:maxLines="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/name"
                    android:background="@drawable/roundborder"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/name"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/roundborder"
                    android:drawableLeft="@drawable/emails"
                    android:drawablePadding="10dp"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/email"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/roundborder"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="10dp"
                    android:hint="Contact Number"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/phone"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/roundborder"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp" />

                <EditText
                    android:id="@+id/conPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/password"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/roundborder"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp" />

                <TextView
                    android:id="@+id/addressTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="23sp"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/houseNum"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="House Number"
                    android:maxLines="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/addressTxt"
                    android:background="@drawable/roundborder"/>

                <EditText
                    android:id="@+id/street"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="Street"
                    android:maxLines="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/houseNum"
                    android:background="@drawable/roundborder"/>

                <EditText
                    android:id="@+id/subdivision"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="Subdivision"
                    android:maxLines="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/street"
                    android:background="@drawable/roundborder"/>

                <EditText
                    android:id="@+id/barangay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="Barangay"
                    android:maxLines="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/subdivision"
                    android:background="@drawable/roundborder"/>

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="City"
                    android:maxLines="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/barangay"
                    android:background="@drawable/roundborder"/>

                <EditText
                    android:id="@+id/zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="Zipcode"
                    android:maxLines="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/city"
                    android:background="@drawable/roundborder"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="20dp"
                        android:text="Please read the "  />

                    <TextView
                        android:id="@+id/tnc_readme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:text="Terms and Conditions"
                        android:textColor="#0000FF"
                        />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/tnc_agree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="I agree with the Terms and Conditions"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/registerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Register"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/conPassword"
                    android:background="@color/darkorange"
                    />

                <!--        <ProgressBar-->
                <!--            android:id="@+id/progressBar"-->
                <!--            android:layout_width="wrap_content"-->
                <!--            android:visibility="gone"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?" />

                    <TextView
                        android:layout_marginStart="5dp"
                        android:id="@+id/loginNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log in here"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
