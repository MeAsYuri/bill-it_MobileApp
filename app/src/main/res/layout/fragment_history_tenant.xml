<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Bill_history.HistoryFragmentTenant">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ActionBar_color"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bill History"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@color/blue"/>

        <TextView
            android:id="@+id/name_tenant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tenant name"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/phone_tenant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone tenant"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/rentFee_tenant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent fee"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tenantRecycler"
            android:layout_width="match_parent"
            android:layout_height="243dp"
            tools:ignore="MissingConstraints"
            android:scrollbars="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:layout_marginTop="20dp">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/billing_statements"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/grey_square"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date of Receipt"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/select_tenant_electricity"
            android:layout_width="154dp"
            android:layout_gravity="center"
            android:layout_height="37dp"
            android:background="#000"
            android:backgroundTint="#FFFF"
            android:foregroundTint="#000"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electricity:"
            android:textColor="#151515"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tenantRecyclerRecord"
            android:layout_width="match_parent"
            android:layout_height="238dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:layout_marginTop="20dp">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date of Receipt"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/select_tenant_water"
            android:layout_width="154dp"
            android:layout_gravity="center"
            android:layout_height="37dp"
            android:background="#000"
            android:backgroundTint="#FFFF"
            android:foregroundTint="#000"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water:"
            android:textColor="#151515"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tenantRecyclerWater"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:layout_marginTop="20dp">

        </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date of Receipt"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/select_tenant_rent"
            android:layout_width="154dp"
            android:layout_gravity="center"
            android:layout_height="37dp"
            android:background="#000"
            android:backgroundTint="#FFFF"
            android:foregroundTint="#000"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:text="Rent:"
            android:textColor="#151515"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tenantRecyclerRent"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:layout_marginTop="20dp">

        </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invisible"
            android:textColor="#151515"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

</ScrollView>