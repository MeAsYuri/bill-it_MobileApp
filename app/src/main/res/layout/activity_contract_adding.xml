<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Contract_creation.ContractAdding">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="245dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-60dp"
        android:src="@drawable/cornercloudlight" />


    <ImageView
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="90dp"
        android:text="Contract"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="537dp"
        android:text="Note: READ the Contract first and
        CONFIRM IT for you to proceed"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/select_tenant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="invisible"
        android:textStyle="bold" />



    <Button
        android:id="@+id/btn_add_edit_text"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="229dp"
        android:layout_marginBottom="47dp"
        android:text="Add Form"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="134dp" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="47dp"
        android:text="Reset"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="488dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="229dp"
        android:layout_marginBottom="0dp"
        android:text="Cancel"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="635dp" />

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="1dp"
        android:text="Proceed"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="368dp" />

    <TextView
        android:id="@+id/roundedSquare"
        android:layout_width="379dp"
        android:layout_height="418dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/rounded_square"></TextView>

    <ScrollView
        android:layout_width="331dp"
        android:layout_height="343dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="29dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="123dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/layout_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />



        </LinearLayout>


    </ScrollView>

</RelativeLayout>